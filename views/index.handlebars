<div class="container">
  
  <div class="row"><!-- ROW 1 -->
   
    <div class="col-lg-2"><!-- 1.0 COL 2 -->
    </div>

    <div class="col-lg-8"><!-- 1.0 COL 8 -->
    <!-- START Main App Content -->
      
      <div class="row"><!-- ROW 1 -->
        
        <div class="col-lg-12 text-center">
          <h1>It's Burger Time!</h1>
          <br>
          <img src="/assets/img/burger.png" alt="Hamburger" height="100px" width="125px">
          <br>
          <form class="create-form">

            <div class="form-group">
              <label for="bur">Add a burger:</label>
              <input type="text" id="bur" name="name"> <button type="submit">Submit</button>
            </div>

          </form>
        </div>

      </div>
      
      <div class="row"><!-- ROW 2 -->

        <!-- Devoured -->
        <div class="col-lg-6"><!-- 2.0 COL 6 -->

          <div class="card" style="width: 20rem;">
          <div class="card-body">
            <h4 class="card-title text-center">Can't wait to eat these!</h4>
            <p class="card-text">
              <ul>
                {{#each burgers}}
                  {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                  {{/unless}}
                {{/each}}
              </ul>
            </p>
          </div>
          </div>

        </div>

        <!-- Not Devoured -->
        <div class="col-lg-6"><!-- 2.0 COL 6 -->

          <div class="card" style="width: 20rem;">
          <div class="card-body">
            <h4 class="card-title text-center">That was yummy!</h4>
            <p class="card-text">
              <ul>
                {{#each burgers}}
                  {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                  {{/if}}
                {{/each}}
              </ul>
            </p>
          </div>
          </div>

        </div>

    <!-- END Main App Content -->
      </div>
    </div>

    <div class="col-lg-2"><!-- 1.0 COL 2 -->
    </div>
  
  </div>

</div>
